<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pivot.aham.api.service.mapper.UserDividendMapper">

    <resultMap id="AccountDividendRes" type="com.pivot.aham.api.service.mapper.model.UserDividendPO">
        <result property="id" column="id"></result>
        <result property="accountId" column="account_id"></result>
        <result property="dividendOrderId" column="dividend_order_id"></result>
        <result property="clientId" column="client_id"></result>
        <result property="goalId" column="goal_id"></result>
        <result property="dividendDate" column="dividend_date"></result>
        <result property="dividendAmount" column="dividend_amount"></result>
        <result property="handelStatus" column="handel_status"></result>
        <result property="handelType" column="handel_type"></result>
        <result property="createTime" column="create_time"></result>
        <result property="updateTime" column="update_time"></result>
        <result property="productCode" column="product_code"></result>
    </resultMap>

    <sql id="baseColum">
        id, dividend_order_id, client_id, account_id, goal_id, dividend_date, dividend_amount, handel_status,
        handel_type, create_time, update_time, product_code
    </sql>

    <insert id="insertUserDividend" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_user_dividend (
        <trim suffixOverrides=",">
            <if test="@Ognl@isNotEmpty(id)">
                id,
            </if>
            <if test="@Ognl@isNotEmpty(dividendOrderId)">
                dividend_order_id,
            </if>
            <if test="@Ognl@isNotEmpty(clientId)">
                client_id,
            </if>
            <if test="@Ognl@isNotEmpty(accountId)">
                account_id,
            </if>
            <if test="@Ognl@isNotEmpty(goalId)">
                goal_id,
            </if>
            <if test="@Ognl@isNotEmpty(dividendDate)">
                dividend_date,
            </if>
            <if test="@Ognl@isNotEmpty(dividendAmount)">
                dividend_amount,
            </if>
            <if test="@Ognl@isNotEmpty(handelStatus)">
                handel_status,
            </if>
            <if test="@Ognl@isNotEmpty(handelType)">
                handel_type,
            </if>
            <if test="@Ognl@isNotEmpty(productCode)">
                product_code,
            </if>
            <if test="@Ognl@isNotEmpty(createTime)">
                create_time,
            </if>
            <if test="@Ognl@isNotEmpty(updateTime)">
                update_time,
            </if>
        </trim>
        ) VALUES (
        <trim suffixOverrides=",">
            <if test="@Ognl@isNotEmpty(id)">
                #{id},
            </if>
            <if test="@Ognl@isNotEmpty(dividendOrderId)">
                #{dividendOrderId},
            </if>
            <if test="@Ognl@isNotEmpty(clientId)">
                #{clientId},
            </if>
            <if test="@Ognl@isNotEmpty(accountId)">
                #{accountId},
            </if>
            <if test="@Ognl@isNotEmpty(goalId)">
                #{goalId},
            </if>
            <if test="@Ognl@isNotEmpty(dividendDate)">
                #{dividendDate},
            </if>
            <if test="@Ognl@isNotEmpty(dividendAmount)">
                #{dividendAmount},
            </if>
            <if test="@Ognl@isNotEmpty(handelStatus)">
                #{handelStatus},
            </if>
            <if test="@Ognl@isNotEmpty(handelType)">
                #{handelType},
            </if>
            <if test="@Ognl@isNotEmpty(productCode)">
                #{productCode},
            </if>
            <if test="@Ognl@isNotEmpty(createTime)">
                #{createTime},
            </if>
            <if test="@Ognl@isNotEmpty(updateTime)">
                #{updateTime},
            </if>
        </trim>
        )
    </insert>

    <insert id="insertBatch" parameterType="java.util.List">
        INSERT INTO t_user_dividend
        (
        id,
        dividend_order_id,
        client_id,
        account_id,
        goal_id,
        dividend_date,
        dividend_amount,
        handel_status,
        handel_type,
        product_code,
        create_time,
        update_time
        ) VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.id},
            #{item.dividendOrderId},
            #{item.clientId},
            #{item.accountId},
            #{item.goalId},
            #{item.dividendDate},
            #{item.dividendAmount},
            #{item.handelStatus},
            #{item.handelType},
            #{item.productCode},
            #{item.createTime},
            #{item.updateTime}
            )
        </foreach>
    </insert>

    <update id="updateUserDividend">
        UPDATE t_user_dividend
        <set>
            <if test="@Ognl@isNotEmpty(handelStatus)">
                handel_status=#{handelStatus},
            </if>
            <if test="@Ognl@isNotEmpty(dividendAmount)">
                dividend_amount=#{dividendAmount},
            </if>
            <if test="@Ognl@isNotEmpty(updateTime)">
                update_time=#{updateTime}
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>

    <select id="queryUserDividend" resultMap="AccountDividendRes">
        select
        <include refid="baseColum"/>
        from t_user_dividend
        <where>
            <if test="@Ognl@isNotEmpty(dividendOrderId)">
                dividend_order_id=#{dividendOrderId}
            </if>
            <if test="@Ognl@isNotEmpty(accountId)">
                and account_id=#{accountId}
            </if>
            <if test="@Ognl@isNotEmpty(goalId)">
                and goal_id=#{goalId}
            </if>
            <if test="@Ognl@isNotEmpty(productCode)">
                and product_code=#{productCode}
            </if>
            <if test="@Ognl@isNotEmpty(dividendDate)">
                and dividend_date=#{dividendDate}
            </if>
        </where>
    </select>

    <select id="queryUserByTime" resultMap="AccountDividendRes">
        select
        <include refid="baseColum"/>
        from t_user_dividend
        <where>
            <if test="@Ognl@isNotEmpty(dividendOrderId)">
                dividend_order_id=#{dividendOrderId}
            </if>
            <if test="@Ognl@isNotEmpty(accountId)">
                and account_id=#{accountId}
            </if>
            <if test="@Ognl@isNotEmpty(goalId)">
                and goal_id=#{goalId}
            </if>
            <if test="@Ognl@isNotEmpty(productCode)">
                and product_code=#{productCode}
            </if>
            <if test="@Ognl@isNotEmpty(dividendDate)">
                and dividend_date=#{dividendDate}
            </if>
            <if test="@Ognl@isNotEmpty(startDividendDate)">
                and dividend_date>=#{startDividendDate}
            </if>
            <if test="@Ognl@isNotEmpty(endDividendDate)">
                and #{endDividendDate}>=dividend_date
            </if>
        </where>
    </select>

    <select id="listUserDividend" resultMap="AccountDividendRes">
        select
        <include refid="baseColum"/>
        from t_user_dividend
        <where>
            <if test="@Ognl@isNotEmpty(accountId)">
                account_id=#{accountId}
            </if>
            <if test="@Ognl@isNotEmpty(goalId)">
                and goal_id=#{goalId}
            </if>
            <if test="@Ognl@isNotEmpty(clientId)">
                and client_id=#{clientId}
            </if>
            <if test="@Ognl@isNotEmpty(handelType)">
                and handel_type=#{handelType}
            </if>
            <if test="@Ognl@isNotEmpty(handelStatus)">
                and handel_status=#{handelStatus}
            </if>
        </where>
    </select>


    <select id="getListByCond" resultType="java.math.BigDecimal">
        select
        SUM(dividend_amount)
        from t_user_dividend
        <where>
            1=1
            <if test="@Ognl@isNotEmpty(dividendDate)">
                AND DATE_FORMAT(dividend_date,'%Y-%m-%d')=DATE_FORMAT(#{dividendDate},'%Y-%m-%d')
            </if>
            <if test="@Ognl@isNotEmpty(handelType)">
                and handel_type=#{handelType}
            </if>
        </where>
    </select>


</mapper>
